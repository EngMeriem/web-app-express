    block header 
      #header
        div(class='container')
          div(class='header-content')
            div(class='logo')
              img(src="images/logo.bmp", alt="Logo Image", draggable="false")
              p Agency
            ul(class='nav')
              li
                a(href="home") Home
              li
                a(href="contact") Contact Us
              li
                a(href="services") Our Services
