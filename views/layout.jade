doctype html
html
  head
    title=title
    
    //-Setup for bootstrap //
    meta(charset,'UTF-8')
    meta(name="viewport", content='width=device-width, initial-scale=1.0, shrink-to-fit-no')
    meta(http-equiv="X-UA-Compatible", content="ie=edge")

    link(rel="shortcut icon", href="images/logo.bmp", type="image/x-icon")

